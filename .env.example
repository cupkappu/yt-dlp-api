# yt-dlp API Server Configuration
# Copy this file to .env and modify the values as needed

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Download configuration
MAX_CONCURRENT_DOWNLOADS=3
TEMP_DIR=/tmp/ytdlp_api
MAX_TASK_AGE_HOURS=1
CHUNK_SIZE=8192

# yt-dlp options (optional)
# YTDLP_QUIET=true
# YTDLP_NO_WARNINGS=false
# YTDLP_IGNOREERRORS=false

# Logging
LOG_LEVEL=INFO
